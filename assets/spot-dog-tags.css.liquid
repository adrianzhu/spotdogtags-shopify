.accordion-header {
  padding: 10px 18px;
  margin-left: -18px;
  margin-right: -18px;
  border-radius:14px;
  cursor: pointer;
  transition: 0.3s;
}

.accordion-header:hover {
  background-color: #EEE;
}

.accordion-content {
  overflow: hidden;
  transition: max-height 0.4s ;
  max-height: 600px;
}

.accordion-content.closed {
  max-height: 0px;
}
.accordion-icon {
  float: right;
}